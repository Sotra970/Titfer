<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:startColor="@color/icon_gray"
                android:endColor =  "#902557"
                android:type="linear"
                />
            <corners android:radius="12dp" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>