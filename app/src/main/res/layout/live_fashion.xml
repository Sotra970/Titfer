<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!--// item 1 -->
    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.titfer.Widget.FixedAspectRatioFrameLayout

            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            app:aspectRatioWidth="1"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/fav_item_border"
            >


            <ImageView
                android:id="@+id/blogs_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|bottom"
                android:scaleType="centerCrop"
                />

            <com.titfer.Widget.FixedAspectRatioFrameLayout
                app:aspectRatioHeight="2"
                app:aspectRatioWidth="6"
                android:background="@drawable/half"
                android:layout_gravity="bottom|center"
                android:id="@+id/blogs_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_centerHorizontal="true"
                    android:text="BLOGS"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="10dp" />
            </com.titfer.Widget.FixedAspectRatioFrameLayout>




        </com.titfer.Widget.FixedAspectRatioFrameLayout>

    </FrameLayout>



    <!--// item 2 -->
    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.titfer.Widget.FixedAspectRatioFrameLayout
            app:aspectRatioWidth="1"
            android:layout_weight="1"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/fav_item_border"
            >


            <ImageView
                android:id="@+id/events_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|bottom"
                android:scaleType="centerCrop"
                />




            <com.titfer.Widget.FixedAspectRatioFrameLayout
                app:aspectRatioHeight="2"
                app:aspectRatioWidth="6"
                android:id="@+id/events_txt"
                android:background="@drawable/half"
                android:layout_gravity="bottom|center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_centerHorizontal="true"
                    android:text="EVENTS"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="10dp" />
            </com.titfer.Widget.FixedAspectRatioFrameLayout>



        </com.titfer.Widget.FixedAspectRatioFrameLayout>

    </FrameLayout>



    <!--// item 3 -->
    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.titfer.Widget.FixedAspectRatioFrameLayout
            app:aspectRatioWidth="1"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fav_item_border"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/news_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|bottom"
                android:scaleType="centerCrop"
                />


            <com.titfer.Widget.FixedAspectRatioFrameLayout
                app:aspectRatioHeight="2"
                app:aspectRatioWidth="6"
                android:id="@+id/news_txt"
                android:background="@drawable/half"
                android:layout_gravity="bottom|center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_centerHorizontal="true"
                    android:text="NEWS"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="10dp" />
            </com.titfer.Widget.FixedAspectRatioFrameLayout>

        </com.titfer.Widget.FixedAspectRatioFrameLayout>

    </FrameLayout>






</LinearLayout>