<?xml version="1.0" encoding="utf-8"?>

<!--// item 1 -->
<LinearLayout android:orientation="vertical"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_weight="1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="108dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fontPath="http://schemas.android.com/tools">


    <com.titfer.Widget.AspectRatioImageView
        android:layout_weight="1"
        android:id="@+id/recommended_img"
        app:aspectRatioEnabled="true"
        app:aspectRatio="1"
        app:dominantMeasurement="height"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|bottom"
        android:scaleType="centerCrop"
        android:background="@drawable/fav_item_border"/>


    <TextView
        android:visibility="visible"
        android:clickable="false"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:id="@+id/recommended_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:text="BLOGS"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        fontPath="fonts/CaviarDreams.ttf"
        android:textSize="@dimen/xsmall_text_size" />

</LinearLayout>