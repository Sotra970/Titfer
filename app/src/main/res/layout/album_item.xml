<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        app:cardUseCompatPadding="true"
        app:cardElevation="1dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/gray100"
        android:layout_marginBottom="8dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.titfer.Widget.AspectRatioImageView
            android:scaleType="centerCrop"
            app:aspectRatio="1"
            android:id="@+id/img"
            app:dominantMeasurement="width"
            app:aspectRatioEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </FrameLayout>

    <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
            android:layout_gravity="center"
            android:id="@+id/add_plus_icon"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_add_48"
            android:layout_width="84dp"
            android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <FrameLayout
                android:layout_weight="0.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
                    android:id="@+id/title_bg"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/shape" />
                <TextView
                    fontPath="fonts/CaviarDreams.ttf"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:id="@+id/title"
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="@string/album_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/xsmall_text_size" />
            </FrameLayout>

        </LinearLayout>


    </FrameLayout>

</android.support.v7.widget.CardView>


